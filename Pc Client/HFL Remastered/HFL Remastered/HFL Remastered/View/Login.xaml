<Window x:Class="HFL_Remastered.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="237" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/HFL Remastered;component/Resources/logo.png" Closing="onCLose">
    <Grid>
        <TextBox x:Name="username_box" HorizontalAlignment="Center" Height="30" Margin="0,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="16" ToolTip="{DynamicResource login_tip}"/>
        <PasswordBox x:Name="pass_box" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="200" Height="30" FontSize="14"/>
        <Button x:Name="login_button" Content="{DynamicResource login_btn}" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="200" IsDefault="True" Height="30" Click="login_button_Click"/>
        <Button x:Name="forum_button" Content="{DynamicResource forum_btn}" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="openForum"/>
        <Label Content="HFL" HorizontalAlignment="Center" Margin="46,73,212,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="0" VerticalAlignment="Top" Width="237" Source="/HFL Remastered;component/Resources/jinxSprite.png" Stretch="Fill"/>
    </Grid>
</Window>
